package 산술연산자;

public class Ex01산술연산자 {

	public static void main(String[] args) {
		
		//산술연산자
		// / : 몫을 구함
		// % : 남은 가치를 구한다.
		// 정수형 10이라는 데이터를 담는 num1 선언
		int num1 = 10;
		// 실수형 7f라는 데이터를 담는 num2 선언
		float num2 = 7.0f;		
		
		System.out.println(num1 % num2);
		System.out.println(num1 / num2);
		//정수형과 실수형을 연산하게 되면 자동으로 실수형태로 변환된다.
		
		// + : 더하기 뿐아니라 연결 연산
		int num3 = 10;
		String num4 = "7";
		char num5 = "3";
		
		System.out.println(num3+num5);
				
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
